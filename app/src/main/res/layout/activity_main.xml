<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/white_gradient_circle"
        app:layout_constraintBottom_toBottomOf="@id/ic_bird"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-200dp"/>

    <ImageView
        android:id="@+id/green_circle_big"
        android:layout_width="1200dp"
        android:layout_height="1200dp"
        android:src="@drawable/green_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_bird"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_bird"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
    
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:width="370dp"
        android:height="65dp"
        app:layout_constraintTop_toBottomOf="@id/down_text_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/green_circle_small"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/green_circle"
        app:layout_constraintBottom_toBottomOf="@id/next_button"
        app:layout_constraintTop_toTopOf="@id/next_button"
        app:layout_constraintEnd_toEndOf="@id/next_button"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/up_text_field"
        android:layout_width="370dp"
        android:layout_height="66dp"
        android:src="@drawable/up_text_field"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/up_text_field"
        app:layout_constraintBottom_toBottomOf="@+id/up_text_field"
        app:layout_constraintStart_toStartOf="@id/up_text_field"
        android:layout_marginStart="20dp"/>

<!--    <TextView-->
<!--        android:id="@+id/text_trivia_small"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Trivia"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="20sp"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_marginStart="6dp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/up_text_field"-->
<!--        app:layout_constraintTop_toTopOf="@id/up_text_field"-->
<!--        app:layout_constraintStart_toStartOf="@id/up_text_field"-->
<!--        app:layout_constraintEnd_toEndOf="@id/up_text_field"/>-->

    <ImageView
        android:id="@+id/middle_text_field"
        android:layout_width="370dp"
        android:layout_height="66dp"
        android:src="@drawable/text_field"
        app:layout_constraintTop_toBottomOf="@id/up_text_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/middle_text_field"
        app:layout_constraintBottom_toBottomOf="@+id/middle_text_field"
        app:layout_constraintStart_toStartOf="@id/middle_text_field"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/down_text_field"
        android:layout_width="370dp"
        android:layout_height="66dp"
        android:src="@drawable/down_text_field"
        app:layout_constraintTop_toBottomOf="@id/middle_text_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/down_text_field"
        app:layout_constraintBottom_toBottomOf="@+id/down_text_field"
        app:layout_constraintStart_toStartOf="@id/down_text_field"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/ic_bird"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_bird"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="160dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="#66FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="44dp"/>

<!--    <ImageView-->
<!--        android:layout_width="20dp"-->
<!--        android:layout_height="20dp"-->
<!--        android:src="@drawable/ic_left_arrow"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/register_text"-->
<!--        app:layout_constraintTop_toTopOf="@id/register_text"-->
<!--        android:layout_marginStart="14dp"-->
<!--        app:tint="#86FFFFFF" />-->

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintEnd_toEndOf="@id/green_circle_small"
        app:layout_constraintBottom_toBottomOf="@id/green_circle_small"
        app:layout_constraintTop_toTopOf="@id/green_circle_small"
        app:layout_constraintStart_toStartOf="@id/green_circle_small" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_question"
        app:layout_constraintBottom_toBottomOf="@id/ic_bird"
        app:layout_constraintStart_toStartOf="@id/ic_bird"
        app:layout_constraintEnd_toEndOf="@id/ic_bird"
        android:layout_marginBottom="110dp"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_question"
        app:layout_constraintBottom_toBottomOf="@id/ic_bird"
        app:layout_constraintStart_toStartOf="@id/ic_bird"
        android:layout_marginBottom="86dp"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_question"
        app:layout_constraintBottom_toBottomOf="@id/ic_bird"
        app:layout_constraintEnd_toEndOf="@id/ic_bird"
        android:layout_marginBottom="86dp"/>

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/up_text_field"
        app:layout_constraintEnd_toEndOf="@id/up_text_field"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/middle_text_field"
        app:layout_constraintEnd_toEndOf="@id/middle_text_field"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/down_text_field"
        app:layout_constraintEnd_toEndOf="@id/down_text_field"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_left_arrow"
        android:background="@null"
        android:scaleType="centerInside"
        android:padding="8dp"
        app:tint="#66FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/register_text"
        app:layout_constraintTop_toTopOf="@id/register_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>